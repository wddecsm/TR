<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="home_text">
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#f00</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/write</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableRight">@drawable/ic_right</item>
    </style>
    <style name="actionbar">
        <item name="android:textColor">#0b0b0b</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/barbacground</item>
        <item name="android:text">超屌购物商城</item>
    </style>

</resources>
