<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#3e3a3a"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:background="@drawable/bar_home_selected"
        android:layout_weight="1"
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@drawable/bar_search_normal"
        android:layout_weight="1"
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@drawable/bar_class_normal"
        android:layout_weight="1"
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@drawable/bar_shopping_normal"
        android:layout_weight="1"
        android:id="@+id/image4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@drawable/bar_more_normal"
        android:layout_weight="1"
        android:id="@+id/image5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>